---
import { mainNav } from '../../data/navigation';

const currentPath = Astro.url.pathname;
---

<header class="site-header" role="banner">
  <nav class="site-nav container" aria-label="Main navigation">
    <a href="/" class="site-logo" aria-label="codewizwit home">
      <img
        src="/images/logo-final.png"
        alt=""
        class="site-logo-img"
        width="48"
        height="33"
        loading="eager"
      />
      <span class="site-logo-text">codewizwit</span>
    </a>

    <button
      class="nav-toggle"
      aria-expanded="false"
      aria-controls="nav-menu"
      aria-label="Open menu"
    >
      <span class="nav-toggle-bar" aria-hidden="true"></span>
      <span class="nav-toggle-bar" aria-hidden="true"></span>
      <span class="nav-toggle-bar" aria-hidden="true"></span>
    </button>

    <ul id="nav-menu" class="nav-list" role="list">
      {mainNav.map(({ label, href }) => {
        const isActive = currentPath === href || (href !== '/' && currentPath.startsWith(href));
        return (
          <li>
            <a
              href={href}
              class:list={['nav-link', { active: isActive }]}
              aria-current={isActive ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        );
      })}
    </ul>
  </nav>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: var(--z-nav);
    background-color: var(--color-cream);
    border-bottom: 1px solid transparent;
    transition: border-color var(--duration-base),
                background-color var(--duration-base);
  }

  .site-header.scrolled {
    border-bottom-color: var(--color-gray-border);
    background-color: rgba(245, 243, 238, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .site-header.menu-open {
    z-index: 9999;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    background-color: var(--color-cream);
  }

  .site-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4.5rem;
  }

  .site-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity var(--duration-fast);
  }

  .site-logo:hover {
    opacity: 0.8;
  }

  .site-logo-img {
    width: 48px;
    height: auto;
    transform: rotate(-30deg);
    transition: transform var(--duration-base) var(--ease-out);
  }

  .site-logo:hover .site-logo-img {
    transform: rotate(-25deg);
  }

  .site-logo-text {
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-text);
    margin-left: var(--space-xs);
  }

  .nav-list {
    display: flex;
    gap: var(--space-md);
    align-items: center;
  }

  .nav-link {
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: 0.01em;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: var(--space-3xs) 0;
    position: relative;
    transition: color var(--duration-fast);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-gold);
    transition: width var(--duration-base) var(--ease-out);
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-text);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  /* ---- Mobile Nav Toggle ---- */

  .nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 32px;
    height: 32px;
    padding: 4px;
    background: none;
    border: none;
    cursor: pointer;
    position: relative;
    z-index: 10001;
  }

  .nav-toggle-bar {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--color-text);
    border-radius: 1px;
    transition: transform var(--duration-base) var(--ease-out),
                opacity var(--duration-fast);
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle[aria-expanded="true"] .nav-toggle-bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ---- Responsive ---- */

  @media (max-width: 768px) {
    .nav-toggle {
      display: flex;
    }

    .nav-list {
      position: fixed;
      inset: 0;
      flex-direction: column;
      justify-content: center;
      gap: var(--space-lg);
      background-color: var(--color-cream);
      opacity: 0;
      visibility: hidden;
      transition: opacity var(--duration-base) var(--ease-out),
                  visibility var(--duration-base);
      z-index: 10000;
    }

    .nav-list.open {
      opacity: 1;
      visibility: visible;
    }

    .nav-link {
      font-family: var(--font-heading);
      font-size: var(--text-2xl);
      font-weight: 700;
      color: var(--color-text);
    }
  }
</style>

<script>
  const header = document.querySelector('.site-header');
  const toggle = document.querySelector('.nav-toggle');
  const menu = document.querySelector('#nav-menu');

  // Sticky header scroll state
  if (header) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        header.classList.toggle('scrolled', !entry.isIntersecting);
      },
      { threshold: 1, rootMargin: '-1px 0px 0px 0px' }
    );

    const sentinel = document.createElement('div');
    sentinel.style.height = '1px';
    sentinel.style.position = 'absolute';
    sentinel.style.top = '0';
    document.body.prepend(sentinel);
    observer.observe(sentinel);
  }

  // Mobile nav toggle
  if (toggle && menu) {
    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      toggle.setAttribute('aria-label', expanded ? 'Open menu' : 'Close menu');
      menu.classList.toggle('open');
      header?.classList.toggle('menu-open');
      document.body.style.overflow = expanded ? '' : 'hidden';
    });

    // Close on nav link click
    menu.querySelectorAll('.nav-link').forEach((link) => {
      link.addEventListener('click', () => {
        toggle.setAttribute('aria-expanded', 'false');
        toggle.setAttribute('aria-label', 'Open menu');
        menu.classList.remove('open');
        header?.classList.remove('menu-open');
        document.body.style.overflow = '';
      });
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && menu.classList.contains('open')) {
        toggle.setAttribute('aria-expanded', 'false');
        toggle.setAttribute('aria-label', 'Open menu');
        menu.classList.remove('open');
        header?.classList.remove('menu-open');
        document.body.style.overflow = '';
        (toggle as HTMLElement).focus();
      }
    });
  }
</script>
