---
import { getCollection } from 'astro:content';

const typeLabels: Record<string, string> = {
  'dispatch': 'Dispatch',
  'field-note': 'Field Note',
  'side-piece': 'Side Piece',
  'case-study': 'Case Study',
  'think-piece': 'Think Piece',
};

const allWriting = await getCollection('writing', ({ data }) => !data.draft);
const articles = allWriting
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2)
  .map((entry) => ({
    type: typeLabels[entry.data.type] || entry.data.type,
    number: entry.data.number,
    title: entry.data.title,
    description: entry.data.description,
    href: `/writing/${entry.id}`,
    date: entry.data.publishDate.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
    }),
  }));
---

<section class="writing-teaser section-cream section" aria-labelledby="writing-heading">
  <div class="container">
    <p class="label label-gold reveal">Writing</p>
    <h2 id="writing-heading" class="writing-teaser-heading reveal">
      Signals from where technology and humanity collide.
    </h2>

    <div class="articles-list">
      {articles.map(({ type, number, title, description, href, date }) => (
        <div class="article-item reveal">
          <div class="article-meta">
            <span class="article-type">{type} â„–{number}</span>
            <span class="article-date">{date}</span>
          </div>
          <a href={href} class="article-title link">{title}</a>
          <p class="article-desc">{description}</p>
        </div>
      ))}
    </div>

    <a href="/writing" class="writing-link link">
      All writing
    </a>
  </div>
</section>

<style>
  .writing-teaser-heading {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    max-width: 30rem;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
    max-width: var(--max-width-prose);
  }

  .article-item {
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-gray-border);
  }

  .article-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-2xs);
  }

  .article-type {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-gold-dark);
  }

  .article-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .article-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: 1.25;
    margin-bottom: var(--space-2xs);
  }

  .article-desc {
    font-size: var(--text-sm);
    line-height: 1.5;
    color: var(--color-text-secondary);
  }

  .writing-link {
    font-size: var(--text-base);
    font-weight: 500;
  }
</style>
