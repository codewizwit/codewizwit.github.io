---
/**
 * Frameworks teaser. Editorial presentation matching
 * the homepage's type-driven, vertical-flow design.
 */
import { frameworks } from '../../data/messaging';
---

<section class="fw-teaser section-dark section" aria-labelledby="fw-teaser-heading">
  <div class="container">
    <p class="label reveal">Frameworks</p>
    <h2 id="fw-teaser-heading" class="fw-teaser-heading reveal">
      Work smarter, not harder.
    </h2>

    <div class="fw-teaser-list">
      <div class="fw-teaser-item reveal">
        <a href="/frameworks/the-lift" class="fw-teaser-name link-light">
          The Lift
        </a>
        <p class="fw-teaser-desc">
          {frameworks.lift.description}
        </p>
      </div>

      <div class="fw-teaser-item reveal">
        <a href="/frameworks/four-lenses" class="fw-teaser-name link-light">
          The Four Lenses
        </a>
        <p class="fw-teaser-desc">
          {frameworks.fourLenses.description}
        </p>
      </div>
    </div>

    <a href="/frameworks" class="fw-teaser-link link-light">
      About the frameworks
    </a>
  </div>
</section>

<style>
  .fw-teaser-heading {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    max-width: 32rem;
  }

  .fw-teaser-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    max-width: var(--max-width-prose);
    margin-bottom: var(--space-lg);
  }

  .fw-teaser-item {
    padding-bottom: var(--space-md);
    border-bottom: 1px solid rgba(245, 243, 238, 0.12);
  }

  .fw-teaser-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .fw-teaser-name {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
  }

  .fw-teaser-desc {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--color-gray-light);
    margin-top: var(--space-2xs);
  }

  .fw-teaser-link {
    font-size: var(--text-base);
    font-weight: 500;
  }
</style>
