---
/**
 * The Lift Preview â€” cream background + gold accents.
 * Old/New World table + 4 Role cards.
 */

const shifts = [
  { before: 'Engineers write code', after: 'Engineers build blueprints' },
  { before: 'AI assists', after: 'AI executes from the blueprint' },
  { before: 'Value = lines of code', after: 'Value = ideas, structure, judgment' },
  { before: 'Quality is tested after', after: 'Quality is encoded before' },
  { before: 'Only technical people build', after: 'Everyone builds inside the environment' },
  { before: 'Handoffs between teams', after: 'Collaboration at The Table' },
];

const roles = [
  {
    title: 'Enablers',
    who: 'Engineers, tech leads',
    shift: 'From gatekeeper to enabler',
  },
  {
    title: 'Builders',
    who: 'Anyone with ideas and domain expertise',
    shift: 'From requester to creator',
  },
  {
    title: 'Advocates',
    who: 'Test practitioners, quality engineers',
    shift: 'From checkers to architects of quality',
  },
  {
    title: 'Facilitators',
    who: 'Team leads, coaches',
    shift: 'From project manager to collaboration architect',
  },
];
---

<section class="lift-teaser section-cream section" aria-labelledby="lift-heading">
  <div class="container">
    <p class="label label-gold reveal">The Lift</p>
    <h2 id="lift-heading" class="lift-teaser-heading reveal">
      A framework for AI adoption that lifts everyone.
    </h2>

    <!-- The Shift Table -->
    <div class="shift-table-wrap reveal">
      <table class="shift-table" role="table">
        <thead>
          <tr>
            <th scope="col">Without The Lift</th>
            <th scope="col" class="shift-after">With The Lift</th>
          </tr>
        </thead>
        <tbody>
          {shifts.map(({ before, after }) => (
            <tr>
              <td class="shift-before">{before}</td>
              <td class="shift-after-cell">{after}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Role Cards -->
    <div class="roles-grid reveal">
      {roles.map(({ title, who, shift }) => (
        <div class="role-card">
          <h3 class="role-title">{title}</h3>
          <p class="role-who">{who}</p>
          <p class="role-shift">{shift}</p>
        </div>
      ))}
    </div>

    <a href="/the-lift" class="lift-link link">
      Explore the full framework
    </a>
  </div>
</section>

<style>
  .lift-teaser-heading {
    font-size: var(--text-3xl);
    max-width: 32rem;
    margin-bottom: var(--space-xl);
  }

  /* ---- Shift Table ---- */

  .shift-table-wrap {
    overflow-x: auto;
    margin-bottom: var(--space-xl);
    -webkit-overflow-scrolling: touch;
  }

  .shift-table {
    width: 100%;
    max-width: 48rem;
    font-size: var(--text-sm);
    border-collapse: collapse;
  }

  .shift-table th {
    text-align: left;
    font-weight: 600;
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-xs) var(--space-sm);
    border-bottom: 2px solid var(--color-black);
  }

  .shift-table th.shift-after {
    color: var(--color-gold-dark);
    border-bottom-color: var(--color-gold);
  }

  .shift-table td {
    padding: var(--space-xs) var(--space-sm);
    border-bottom: 1px solid var(--color-gray-border);
    vertical-align: top;
    line-height: 1.5;
  }

  .shift-before {
    color: var(--color-text-secondary);
  }

  .shift-after-cell {
    font-weight: 500;
    color: var(--color-text);
  }

  /* ---- Role Cards ---- */

  .roles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    max-width: 48rem;
  }

  .role-card {
    padding: var(--space-md);
    border: 1px solid var(--color-gray-border);
    border-radius: var(--radius-lg);
    transition: border-color var(--duration-fast),
                box-shadow var(--duration-fast);
  }

  .role-card:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-sm);
  }

  .role-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    margin-bottom: var(--space-2xs);
  }

  .role-who {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
  }

  .role-shift {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-gold-dark);
  }

  .lift-link {
    font-size: var(--text-base);
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .roles-grid {
      grid-template-columns: 1fr;
    }

    .shift-table td,
    .shift-table th {
      padding: var(--space-2xs) var(--space-xs);
    }
  }
</style>
