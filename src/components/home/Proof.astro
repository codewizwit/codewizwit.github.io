---
/**
 * Proof section: speaking + projects.
 * Clean typeset lists, scannable. Not cards.
 */

const speaking = [
  {
    event: 'AI Summit New York',
    talk: 'Human-in-the-Loop: Responsible AI Engineering in Practice',
    year: '2025',
    note: 'Selected as Future AI Leader',
    upcoming: false,
  },
  {
    event: 'Vanguard IGNITE',
    talk: 'Testing Strategies for Bias and Blindspots in AI Workflows',
    year: '2026',
    note: '',
    upcoming: true,
  },
];

const projects = [
  {
    name: 'The Jira Chronicles',
    desc: 'An interactive click-through story exploring project management reimagined with AI',
    link: 'https://codewizwit.github.io/jira-chronicles/',
  },
  {
    name: 'Human-in-the-Loop CLI',
    desc: 'A published npm package of human-centered prompts designed to augment expertise while keeping developers in control',
    link: 'https://www.npmjs.com/package/@human-in-the-loop/cli',
  },
];

const affiliations = [
  'Future AI Leaders Cohort',
  'AI Connect Committee',
  'Responsible AI Institute',
  'All Tech Is Human',
];
---

<section class="proof section-cream section" aria-labelledby="proof-heading">
  <div class="container">
    <div class="proof-grid">
      <!-- Projects -->
      <div class="proof-col reveal">
        <p class="label label-gold">Projects</p>
        <h2 id="proof-heading" class="proof-heading">On the side</h2>
        <ul class="proof-list" role="list">
          {projects.map(({ name, desc, link }) => (
            <li class="proof-item">
              {link ? (
                <a href={link} class="proof-event link" target={link.startsWith('http') ? '_blank' : undefined} rel={link.startsWith('http') ? 'noopener noreferrer' : undefined}>{name}</a>
              ) : (
                <span class="proof-event">{name}</span>
              )}
              <p class="proof-talk">{desc}</p>
            </li>
          ))}
        </ul>
      </div>

      <!-- Speaking -->
      <div class="proof-col reveal">
        <p class="label label-gold">Speaking</p>
        <h3 class="proof-heading">On stages</h3>
        <ul class="proof-list" role="list">
          {speaking.map(({ event, talk, year, note, upcoming }) => (
            <li class="proof-item">
              <div class="proof-item-header">
                <span class="proof-event">{event}</span>
                <span class="proof-year">{upcoming ? `${year} (Upcoming)` : year}</span>
              </div>
              <p class="proof-talk">{talk}</p>
              {note && <p class="proof-note">{note}</p>}
            </li>
          ))}
        </ul>
      </div>

      <!-- Affiliations -->
      <div class="proof-col reveal">
        <p class="label label-gold">Affiliations</p>
        <h3 class="proof-heading">At the table</h3>
        <ul class="proof-list" role="list">
          {affiliations.map((name) => (
            <li class="proof-item proof-item-simple">
              <span class="proof-event">{name}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .proof-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: var(--space-2xl);
  }

  .proof-heading {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    margin-top: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .proof-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .proof-item {
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-gray-border);
  }

  .proof-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .proof-item-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-sm);
    margin-bottom: var(--space-3xs);
  }

  .proof-event {
    font-weight: 600;
    font-size: var(--text-base);
  }

  .proof-year {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-family: var(--font-code);
    flex-shrink: 0;
  }

  .proof-talk {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .proof-note {
    font-size: var(--text-xs);
    color: var(--color-gold-dark);
    margin-top: var(--space-3xs);
    font-weight: 500;
  }

  .proof-item-simple {
    padding-bottom: var(--space-xs);
  }

  @media (max-width: 768px) {
    .proof-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
  }
</style>
