---
import PageLayout from '../layouts/PageLayout.astro';

const links = [
  { label: 'GitHub', href: 'https://github.com/codewizwit', desc: 'Code, tools, and open source' },
  { label: 'LinkedIn', href: 'https://linkedin.com/in/akelstrom', desc: 'Professional network' },
  { label: 'Medium', href: 'https://codewizwit.medium.com', desc: 'Dispatch â„–13 and Field Notes' },
  { label: 'npm', href: 'https://www.npmjs.com/package/@human-in-the-loop/cli', desc: 'Human-in-the-Loop CLI' },
];
---

<PageLayout
  title="Connect"
  description="Get in touch with Alexandra Kelstrom. Speaking inquiries, collaboration, or just to say hello. Links, resume, and ways to connect."
>
  <section class="connect section-cream section" aria-labelledby="connect-heading">
    <div class="container container-narrow">
      <p class="label label-gold">Connect</p>
      <h1 id="connect-heading" class="connect-title">
        Let's build something together.
      </h1>
      <p class="connect-lede">
        Speaking inquiries, collaboration ideas, or thoughts on responsible AI.
        I'm always interested in conversations with people who care about
        building technology that serves humans.
      </p>

      <div class="connect-email">
        <h2 class="connect-section-label">Email</h2>
        <a href="mailto:akelstrom@icloud.com" class="connect-email-link">
          akelstrom@icloud.com
        </a>
      </div>

      <div class="connect-links">
        <h2 class="connect-section-label">Elsewhere</h2>
        <ul class="connect-list" role="list">
          {links.map(({ label, href, desc }) => (
            <li>
              <a href={href} class="connect-link-card" target="_blank" rel="noopener noreferrer">
                <span class="connect-link-name">{label}</span>
                <span class="connect-link-desc">{desc}</span>
                <span class="connect-link-arrow" aria-hidden="true">&rarr;</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="connect-resume">
        <h2 class="connect-section-label">Resume</h2>
        <a href="/resume/ResumeAlexandraKelstrom2026.pdf" class="connect-resume-btn" download>
          Download resume (PDF)
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .connect-title {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    margin-top: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .connect-lede {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--color-text-secondary);
    max-width: 36rem;
    margin-bottom: var(--space-2xl);
  }

  .connect-section-label {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  /* Email */
  .connect-email {
    margin-bottom: var(--space-xl);
  }

  .connect-email-link {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    background-image: linear-gradient(var(--color-gold), var(--color-gold));
    background-position: 0% 100%;
    background-repeat: no-repeat;
    background-size: 0% 3px;
    padding-bottom: 2px;
    transition: background-size var(--duration-base) var(--ease-out);
  }

  .connect-email-link:hover {
    background-size: 100% 3px;
  }

  /* Links */
  .connect-links {
    margin-bottom: var(--space-xl);
  }

  .connect-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: var(--color-gray-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .connect-link-card {
    display: grid;
    grid-template-columns: 8rem 1fr auto;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-cream);
    text-decoration: none;
    color: inherit;
    transition: background-color var(--duration-fast);
  }

  .connect-link-card:hover {
    background: var(--color-white);
  }

  .connect-link-name {
    font-weight: 600;
    font-size: var(--text-base);
  }

  .connect-link-desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .connect-link-arrow {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    transition: transform var(--duration-base) var(--ease-out),
                color var(--duration-fast);
  }

  .connect-link-card:hover .connect-link-arrow {
    transform: translateX(4px);
    color: var(--color-gold-dark);
  }

  /* Resume */
  .connect-resume-btn {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    font-size: var(--text-base);
    color: var(--color-text);
    text-decoration: none;
    padding: 0.75em 1.5em;
    border: 1.5px solid var(--color-text);
    border-radius: var(--radius-sm);
    transition: background-color var(--duration-fast),
                color var(--duration-fast);
  }

  .connect-resume-btn:hover {
    background-color: var(--color-black);
    color: var(--color-cream);
  }

  @media (max-width: 640px) {
    .connect-link-card {
      grid-template-columns: 1fr auto;
    }

    .connect-link-desc {
      display: none;
    }
  }
</style>
