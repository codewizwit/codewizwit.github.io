---
import SEO from '../components/global/SEO.astro';
import GrainOverlay from '../components/global/GrainOverlay.astro';
import '../styles/global.css';
import '../styles/typography.css';
import '../styles/utilities.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishDate?: Date;
}

const { title, description, canonical, ogImage, ogType, publishDate } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Font Preloads (critical fonts only) -->
    <link rel="preload" href="/fonts/lora-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/lora-bold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/inter-latin.woff2" as="font" type="font/woff2" crossorigin />

    <SEO
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
      ogType={ogType}
      publishDate={publishDate}
    />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <GrainOverlay />
    <slot />
  </body>
</html>
