---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishDate?: Date;
}

const { title, description, canonical, ogImage, ogType, publishDate } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  ogType={ogType}
  publishDate={publishDate}
>
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
</BaseLayout>
